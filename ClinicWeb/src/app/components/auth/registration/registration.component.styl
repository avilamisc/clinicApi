@import '~src/styles/form.styl'
@import '~src/styles/auth-form.styl'

.registration-container
    padding 1em 2em
    border-radius 1em
    margin-top 5em
    .navigation-button
        width 40%
        margin 0 1em
        background-color #007bff

.user-image-container
    margin 1em 0

    .image-container
        text-align center
        margin 1em
        img
            max-height 200px
            max-width 150px
    
    .buttons-container
        margin-top 0
        button
            width 100%
        .upload-image
            position relative
            input[type=file]
                position absolute
                left 0
                top 0
                width 100%
                height 100%
                opacity 0
                cursor pointer